{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 7am on Sunday",
    "before 7am on Wednesday"
  ],
  "updateNotScheduled": false,
  "minimumReleaseAge": "7 days",
  "packageRules": [
    {
      "matchPaths": [
        "docs/**"
      ],
      "schedule": [
        "every 3 months"
      ]
    },
    {
      "packagePatterns": [
        "^Npgsql"
      ],
      "groupName": "Npgsql dependencies"
    },
    {
      "packagePatterns": [
        "^Microsoft"
      ],
      "groupName": "Microsoft dependencies"
    },
    {
      "packagePatterns": [
        "^HotChocolate"
      ],
      "groupName": "HotChocolate (GraphQL) dependencies"
    },
    {
      "packagePatterns": [
        "^MassTransit"
      ],
      "groupName": "MassTransit dependencies"
    },
    {
      "packagePatterns": [
        "^Serilog"
      ],
      "groupName": "Serilog dependencies"
    }
  ]
}
